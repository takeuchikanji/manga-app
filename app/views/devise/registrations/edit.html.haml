.wrapper__user

  .header__user
    %p.app-title__box
      = link_to "Comic-Remember", root_path, class: "app-title"
  .main__user-box
    %section.main__user-box__center
      %h2 アカウント編集
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field_all
          .field
            = f.label :name, "ニックネーム"
            %span （2文字以上10文字以内）
            %br/
            = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "例）マンガ星人", class: "form_default", required: true, maxlength: "10", minlength: "2"
          .field
            = f.label :email, "メールアドレス"
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例）xxx@yyy.zzz", class: "form_default", required: true
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          .field
            = f.label :password
            %span (変更しない場合は、空白で構いません)
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: "最低6文字必要です", class: "form_default"
          .field
            = f.label :password_confirmation, "もう一度パスワードを入力してください"
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "form_default"
          .field
            = f.label :current_password
            %br/
            = f.password_field :current_password, autocomplete: "current-password", class: "form_default", required: true
          .actions
            = f.submit "変更する", class: "form_submit"
      .user__delete__field
        = link_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "アカウントを削除しますか？" }, method: :delete, class: "user__delete__btn" , id: "user_delete_button", value: "アカウントを削除する"




